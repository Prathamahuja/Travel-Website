<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2"></div>
 <div class="card col-6 offset-3 show-card listing-card">
<h3>EDIT a New lisitng</h3>
<form method="post" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
  <div class="mb-3">
    <lable for="title" class="form-label">title</lable>

    <input
      name="listing[title]"
      value="<%= listing.title %>"
      type="text"
      class="form-control"
      required
    />
  </div>
  <div class="mb-3">
    <lable for="description" class="form-label">Description</lable>
    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
    <div class="invalid-feedback">description needed</div>
  </div>
  <div class="mb-3">
    Orignal listing Image
     <img  class="card col-6 offset-3 show-card listing-card" src="<%= orignalImageUrl %>" alt="">

  </div>
  <div class="mb-3">
    <lable for="image" class="form-label"> New image link</lable>

    <input
      name="listing[image]"
      type="file"
      class="form-control"
        />

  </div>

  <div class="row">

   <div class="mb-3 col-md-4">
    <lable for="price" class="form-label">price</lable>

    <input
      name="listing[price]"
      value="<%= listing.price %>"
      type="number"
      class="form-control"
      required
    />
    <div class="invalid-feedback"> please enter valid price</div>
  </div>

  <div class="mb-3 col-md-8">
    <lable for="country" class="form-label">country</lable>
    <input
      name="listing[country]"
      value="<%= listing.country %>"
      type="text"
      class="form-control"
      required
    />
    <div class="invalid-feedback"> please enter valid country</div>
  </div>
</div>

  <div class="mb-3">
    <lable for="location" class="form-label">location</lable>

    <input
      name="listing[location]"
      value="<%= listing.location %>"
      type="text"
      class="form-control"
      required
    />

   
  </div>
  <button class="btn btn-dark edit-btn">EDIT</button>
</div>
</div>



</form>